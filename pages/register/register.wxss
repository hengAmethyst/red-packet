page {
    width: 100%;
    height: 100%;
    padding: 0 50rpx;
    box-sizing: border-box;
}

.banner .title {
    padding: 110rpx 0 189rpx;
    font-size: 60rpx;
    font-weight: 600;
    color: #2b2b2b;
}

.form-item {
    border-bottom: 1rpx solid #b9b9b9;
    margin-top: 16rpx;
}

.form-item.active {
    border-bottom-color: #ee4126;
}

.form-item .label {
    height: 37rpx;
    font-size: 26rpx;
    color: #2b2b2b;
}

.form-item .item-value {
    display: flex;
    justify-content: space-between;
    margin: 16rpx 0;
}

.form-item .item-value input {
    flex-grow: 1;
}

.form-item .item-value .extra {
    font-size: 26rpx;
    text-align: right;
    color: #b9b9b9;
    line-height: 52.5rpx;
}

.form-item.active .item-value .extra {
    color: #ee4126;
}

.btn-register {
    margin-top: 50rpx;
    border-radius: 4rpx;
    background-color: #ee4126;
    color: #ffffff;
    font-size: 36rpx;
}

form .btn-register[disabled] {
    color: #ffffff;
    background-color: #dcdcdc;
}
.btn-register::after {
    border: 0;
}